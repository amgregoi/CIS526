<html>
<head>
<%=render "/layouts/header" %>
</head>
<body>
<div id="main">
	<br><br>
	<div class="panel-group" id="accordion">
		<% for club in Club.all %>
			<div class="panel panel-default">
				<div class="panel-heading accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#<%=club.name.delete(' ')%>">
					<div class="panel-title">
						<h4>
							<%= club.name%>
						</h4>
					</div>
				</div>
				<div id="<%club.name.delete(' ')%>" class="panel-collapse collapse in">
					<div class="panel-body"> <%= club.description %> </div>
				</div>
		<% end %>
	</div>
		


	</div>
</div>
 
</body>
</html>