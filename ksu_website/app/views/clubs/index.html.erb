<html>
<head>
<%=render "/layouts/header" %>
</head>
<body>
<br><br>
<div class="panel-group" id="accordion">
	<% for club in Club.all %>
		<div class="panel panel-default">
			<div class="panel-heading accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#<%=club.name%>">
				<div class="panel-title">
					<h4>
						<a href="#"> <%= club.name%></a>
					</h4>
				</div>
			</div>
			<div id="<%=club.name%>" class="panel-collapse collapse in">
				<div class="panel-body"> <%= club.description %> </div>
			</div>
	<% end %>
</div>
 
</body>
</html>