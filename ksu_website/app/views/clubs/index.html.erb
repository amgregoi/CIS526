<html>
<head>
<%=render "/layouts/header" %>
</head>
<body>
	<div id="main-wrapper">
		<div id="main">
			<h3>Search</h3>
			<%= form_tag clubs_path, method: "get" do %>
			<%= label_tag("Name: ") %> <%= text_field_tag :name_keywords %> <br/>
			<%= submit_tag "Enter" %>
			<% end %>
			<br><br>




			<div class="panel-group" id="accordion">
				<% for club in @clubs %>
					<div class="panel panel-default">
						<div class="panel-heading accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#<%=club.name.gsub(/[^0-9A-Za-z]/, '')%>">
							<div class="panel-title">
								<h3>
									<%= club.name%>
								</h3>
							</div>
						</div>
						<div id="<%=club.name.gsub(/[^0-9A-Za-z]/, '')%>" class="panel-collapse collapse out">
							<div class="panel-body"> <i>Description: </i> <%= club.description %> </div>
						</div>
					</div>
				<% end %>
			</div>
				
		</div>
	</div>
</body>
</html>