<html>
	<head>
		<%=render "/layouts/header" %>
	</head>
	
	<body>
		<div id="main-wrapper">
			<div id="main">
				<!-- Carousel source: http://www.sitepoint.com/creating-javascript-sliders-using-twitter-bootstrap-3/ -->
				<div id="carousel-example-generic" class="carousel slide" data-ride="carousel" style="width: 765px;">
				  <!-- Indicators -->
				  <ol class="carousel-indicators">
					<li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
					<li data-target="#carousel-example-generic" data-slide-to="1"></li>
					<li data-target="#carousel-example-generic" data-slide-to="2"></li>
				  </ol>
				  <!-- Slider Content (Wrapper for slides )-->
				  <div class="carousel-inner">
					<div class="item active">
					  <img src="nichols_765_promo.jpg" alt="...">
					</div>
					<div class="item">
					  <img src="argus_765_promo.jpg" alt="---">
					</div>
					<div class="item">
					  <img src="chessrobot_765_promo.jpg" alt="+++">
					</div>
				  </div>
				</div>
				
				<div class="row" style="padding-top: 10px;">
					<div class="col-md-6">
						<div id="event_table">
							<table class="table table-striped" id="timeTable">
								<thead>
								  <tr>
									<th>Events Upcoming</th>
								  </tr>
								</thead>
								<tbody id="tableBody">
								<% for event in Event.all %>
								  <tr>
									<td>
										<h4><%= event.title%></h4>
										<%= event.description%><br>
										<%= event.event_date%>
									</td>
								  </tr>
								 <%end%>
								</tbody>
							</table>
						</div>
					</div>
					<div class="col-md-6">
						<div id="employment_table">
							<table class="table table-striped" id="timeTable">
								<thead>
								  <tr>
									<th>Employments</th>
								  </tr>
								</thead>
								<tbody id="tableBody">
								<% for employment in Employment.all %>
								  <tr>
									<td>
										<h4><%= employment.title%></h4>
										<%= employment.description%><br>
										<%= employment.job_type%>
									</td>
								  </tr>
								 <%end%>
								</tbody>
							</table>
						</div>
					</div>
				</div>	
			</div>
			<br>
		</div>
	</body>
</html>