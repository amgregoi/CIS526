<html>
<head>
<%=render "/layouts/header" %>
</head>
<body>
<div id="main">

  <h3>Search</h3>
  <%= form_tag courses_path, method: "get" do %>
    <%= label_tag("Keywords: ") %><%= text_field_tag :keywords %> <br/>
    <%= label_tag("Department: ") %> <%= text_field_tag :department %> <br/>
    <%= label_tag("Course #: ") %> <%= text_field_tag :course_num %> <br/>
    <%= submit_tag "Enter" %>
  <% end %>

  <br><br>
  <div class="panel-group" id="accordion">
    <% for course in @courses.order(:course_number) %>
	  <div class="panel panel-default">
		<div class="panel-heading accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#<%=course.course_number%>">
		  <div class="panel-title">
			<h3>
			  <%= course.department.upcase%> <%= course.course_number%> - <%= course.title%>
			</h3>
		  </div>
		</div>
		<div id="<%=course.course_number%>" class="panel-collapse collapse in">
          <div class="panel-body"> <i>Description: </i> <%= course.description %> </div> <br/>
			<div class="panel-body"> <i>Credits: </i> <%= course.credits %> </div>
		  </div>
	<% end %>
  </div>
</div>
</body>
</html>