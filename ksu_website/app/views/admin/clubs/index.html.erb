<html>
<head>
<%=render "/layouts/header" %>
<style type = "text/css">
    table, td, th {
      border: 1px solid black;
	  padding: 15px;
    } 
	th {
	  background-color: rgb(149, 29, 209);
      color:white
	}
</style>
</head>
<body>
<div id="main">

  <h1>Listing Clubs</h1>

  <h3>Search</h3>
  <%= form_tag admin_clubs_path, method: "get" do %>
    <%= label_tag("Name: ") %> <%= text_field_tag :name_keywords %> <br/>
    <%= submit_tag "Enter" %>
  <% end %>
  </br>
  
  <%= link_to 'Add Club', new_admin_club_path %>
  </br></br>
  
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Url</th>
        <th>Meeting</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @clubs.each do |club| %>
        <tr>
          <td><%= club.name %></td>
          <td><%= club.url %></td>
          <td><%= club.meeting %></td>
          <td><%= link_to 'Show', admin_club_path(club) %></td>
          <td><%= link_to 'Edit', edit_admin_club_path(club) %></td>
          <td><%= link_to 'Destroy', admin_club_path(club), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br/>

</div>
</body>
</html>