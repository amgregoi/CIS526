<html>
<head>
<%=render "/layouts/header" %>
<style type = "text/css">
  img {float:left; margin-left:120px;}
  p {margin-left:300px;}
</style>
</head>
<body>
<div id="main">

  <h1>CIS Faculty</h1> </br>
  
  <% @faculties.each do |faculty| %>
    <%= image_tag faculty.image.url if faculty.image_stored? %>
    <p><%= faculty.name %></p> 
    <p><b><%= faculty.title %></b></p> 
    <p>Office: <%= faculty.office %></p>
    <p>Phone Number: <%= faculty.phone_number %></p>
    <p>Email: <%= faculty.email %></p>
	</br>
  <% end %>

  <br>

</div>
</body>
</html>